<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <SurfaceView
        android:id="@+id/previewSurface"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/statsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Stats Overlay -->
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AA000000"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvFrameCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encoded: 0 (0 I-frames)"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/tvDroppedFrames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Dropped: 0 (0.00%)"
            android:textColor="#FF6B6B"
            android:textSize="14sp"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/tvBufferOccupancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ring: 0/32"
            android:textColor="#51CF66"
            android:textSize="14sp"
            android:fontFamily="monospace" />

        <TextView
            android:id="@+id/tvFps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Camera: 0 frames"
            android:textColor="#FFD93D"
            android:textSize="14sp"
            android:fontFamily="monospace" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
